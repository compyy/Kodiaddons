<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.yasir" name="Yasirs Addon Repository" version="1.4" provider-name="Yasir">
    <extension point="xbmc.addon.repository" name="Yasirs Addon Repository">
        <dir>
            <info compressed="false">https://raw.github.com/compyy/Kodiaddons/master/addons.xml</info>
            <checksum>https://raw.github.com/compyy/Kodiaddons/master/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/compyy/Kodiaddons/raw/master/zips</datadir>
        </dir>

        <info compressed="false">https://raw.github.com/compyy/Kodiaddons/master/addons.xml</info>
        <checksum>https://raw.github.com/compyy/Kodiaddons/master/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/compyy/Kodiaddons/raw/master/zips</datadir>

    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Addons related to Pakistani videos</summary>
        <description>Repositry for my addons</description>
        <platform>all</platform>
    </extension>
</addon>

    <addon id="plugin.video.PakMedia" name="PakMedia" version="6.8" provider-name="Yasir">
        <requires>
            <import addon="script.module.requests"/>
            <import addon="script.module.beautifulsoup4"/>
            <import addon="xbmc.python" version="3.0.0"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="addon.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.service" library="service.py"/>
        <extension point="xbmc.addon.metadata">
            <platform>all</platform>
            <summary lang="en"></summary>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">www.PakMedia.com.pk</summary>
            <description lang="en">Watch Vidoes uploaded to different Pakistani video sites</description>
            <assets>
                <icon>icon.png</icon>
            </assets>
            <disclaimer lang="en">The author does not host or distribute any of the content displayed by this addon. The
                author does not have any affiliation with the content provider.
            </disclaimer>
            <language>English</language>
            <source>https://github.com/compyy/Kodisiasat</source>
            <website>https://github.com/compyy/Kodisiasat</website>
            <platform>all</platform>
        </extension>
    </addon>
</addons>
